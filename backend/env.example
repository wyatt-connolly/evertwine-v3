# Application Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
# Local Development
DB_HOST=localhost
DB_PORT=5432
DB_NAME=evertwine_db
DB_USER=postgres
DB_PASSWORD=password

# AWS RDS Configuration (Production)
# DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
# DB_PORT=5432
# DB_NAME=evertwine_production
# DB_USER=evertwine_user
# DB_PASSWORD=your-secure-password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# AWS ElastiCache Configuration (Production)
# REDIS_URL=redis://your-elasticache-endpoint.region.cache.amazonaws.com:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Email Configuration (for password reset, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@evertwine.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret

# File Upload (if needed)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
